<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="animate_cards"
        android:title="@string/animatetitle"
        android:summary="@string/animatesummary"
        android:defaultValue="true" />
    <CheckBoxPreference
        android:key="play_directly"
        android:title="@string/playdirecttitle"
        android:summary="@string/playdirectsummary"
        android:defaultValue="true" />
    <ListPreference
        android:dialogTitle="@string/cardselect"
        android:key="card_select"
        android:summary="@string/cardtypedesc"        
        android:title="@string/cardselect"
        android:entries="@array/cardtypes"
        android:entryValues="@array/cardtypes"
        android:defaultValue="@string/cardtypedefault"
        />
</PreferenceScreen>