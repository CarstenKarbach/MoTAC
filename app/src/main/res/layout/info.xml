<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:karbach="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/wood"
              android:orientation="vertical"
              android:weightSum="100"
              android:gravity="center_horizontal"
              tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/teaser"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="45"
        android:contentDescription="@string/app_name"
        android:paddingBottom="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/infoteaser" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="50">

        <TableLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:gravity="center_horizontal"
            android:layout_margin="16dp"
            android:padding="16dp"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:stretchColumns="*"
                android:layout_margin="4dp"
                >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:paddingStart="0dp"
                    android:paddingLeft="0dp"
                    android:text="@string/info_developer"
                    android:textColor="@color/black"
                    android:textSize="7pt"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center_vertical|start"
                    android:shadowColor="#ffcccccc"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:text="@string/info_developer_value"
                    android:textColor="@color/black"
                    android:textSize="7pt" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:stretchColumns="*"
                android:layout_margin="4dp"
                >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:paddingStart="0dp"
                    android:paddingLeft="0dp"
                    android:text="@string/info_started"
                    android:textColor="@color/black"
                    android:textSize="7pt"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center_vertical|start"
                    android:shadowColor="#ffcccccc"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:text="@string/info_started_value"
                    android:textColor="@color/black"
                    android:textSize="7pt" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:stretchColumns="*"
                android:layout_margin="4dp"
                >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:paddingStart="0dp"
                    android:paddingLeft="0dp"
                    android:text="@string/info_support"
                    android:textColor="@color/black"
                    android:textSize="7pt"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center_vertical|start"
                    android:shadowColor="#ffcccccc"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:text="@string/info_support_value"
                    android:textColor="@color/black"
                    android:textSize="7pt" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:stretchColumns="*"
                android:layout_margin="4dp"
                >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center_vertical|start"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="0dp"
                    android:paddingLeft="0dp"
                    android:text=""
                    android:textSize="7pt"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center_vertical|start"
                    android:shadowColor="#ffcccccc"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:text="@string/info_support_value2"
                    android:textColor="@color/black"
                    android:textSize="7pt" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:stretchColumns="*"
                android:layout_margin="4dp"
                >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center_vertical|start"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="0dp"
                    android:paddingLeft="0dp"
                    android:text="@string/info_version"
                    android:textColor="@color/black"
                    android:textSize="7pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/info_version_value"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center_vertical|start"
                    android:shadowColor="#ffcccccc"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="7pt" />
            </TableRow>
    </TableLayout>

    </ScrollView>

</LinearLayout>