<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:karbach="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/wood"
    android:orientation="vertical"
    android:weightSum="100" >

    <ImageView
	       	android:contentDescription="@string/app_name"
	        android:id="@+id/teaser"
	        android:layout_height="0dip"
	        android:layout_width="match_parent"
	        android:layout_weight="45"
	        android:src="@drawable/infoteaser"
	        android:scaleType="fitCenter"
	        android:paddingBottom="30dp" />

    <LinearLayout 
        android:padding="15dp"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_weight="40"
        android:layout_height="0dip"
        android:gravity="center_horizontal"
        android:background="@color/trans"
        >
    
    <LinearLayout 
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
    
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_weight="25"
        android:layout_height="0dip"
	    android:layout_width="match_parent"
        >

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:paddingRight="10dp"
            android:text="@string/info_developer"
            android:textColor="@color/black"
            android:textSize="7pt"
            android:textStyle="bold" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:shadowColor="#ffcccccc"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="@string/info_developer_value"
            android:textColor="@color/black"
            android:textSize="7pt" />

    </LinearLayout>
   <LinearLayout
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_weight="25"
        android:layout_height="0dip"
	    android:layout_width="match_parent"
        >

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:paddingRight="10dp"
            android:text="@string/info_started"
            android:textColor="@color/black"
            android:textSize="7pt"
            android:textStyle="bold" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:shadowColor="#ffcccccc"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="@string/info_started_value"
            android:textColor="@color/black"
            android:textSize="7pt" />

    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_weight="25"
        android:layout_height="0dip"
	    android:layout_width="match_parent"
        >

        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:paddingRight="10dp"
            android:text="@string/info_support"
            android:textColor="@color/black"
            android:textSize="7pt"
            android:textStyle="bold" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:shadowColor="#ffcccccc"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="@string/info_support_value"
            android:textColor="@color/black"
            android:textSize="7pt" />

    </LinearLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_weight="25"
        android:layout_height="0dip"
	    android:layout_width="match_parent"
        >
        <TextView 
        android:paddingRight="10dp"
        android:layout_width="140dp"
	    android:layout_height="match_parent"
	    android:gravity="center_vertical|left"
	    android:textStyle="bold"
	    android:textSize="7pt"
	    android:text="" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:shadowColor="#ffcccccc"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="@string/info_support_value2"
            android:textColor="@color/black"
            android:textSize="7pt" />

    </LinearLayout>

    </LinearLayout>
    
    </LinearLayout>
</LinearLayout>